
DART_ROOT = $(shell pwd)/../..
LIBDART   = $(DART_ROOT)/dart-shmem/libdart.a -lpthread
DART_IF   = $(DART_ROOT)/../../dart-if/v2


PWD  = $(shell basename `pwd`)
PAT  = $(shell echo -n $(PWD) )
PROG = $(shell echo -n $(PAT) | cut -d . -f 2)

all : $(PROG)

printenv : 
	 @echo "DART_ROOT = $(DART_ROOT)"
	 @echo "LIBDART = $(LIBDART)"
	 @echo "DART_IF = $(DART_IF)"

$(PROG) : main.o
	$(CC) $(LFLGAS) -o $@ $+ $(LIBDART)

%.o 	: %.c 
	$(CC) -c $(CFLAGS) -I$(DART_IF) $+

clean : 
	rm -f *.o *~
	rm -f $(PROG)
