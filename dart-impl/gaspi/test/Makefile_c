TEST_ROOT  = $(PWD)/../
DART_ROOT  = /home/cherold/procs/dash
GTEST_ROOT = $(TEST_ROOT)/gtest
GTEST_INC  = $(GTEST_ROOT)/include
GTEST_LIB  = $(GTEST_ROOT)/make/gtest.a

CFLAGS    = -Wall --std=c++11 -c -ggdb
LIB_DART  = -L$(DART_ROOT)/lib -ldart-gaspi
LIB_GASPI = -L$(GPI2_ROOT)/lib -libverbs -lpthread -lGPI2 -Wl,-rpath=$(GPI2_ROOT)/lib:
INCLUDE   = -I$(GPI2_ROOT)/include -I$(DART_ROOT)/include -I$(TEST_ROOT) -I$(GTEST_INC)

CC = g++

PROG = main

$(PROG):main.o
	$(CC) -o $@ main.o $(LIB_DART) $(LIB_GASPI) $(GTEST_LIB)

%.o:%.cpp
	$(CC) $(CFLAGS) $(INCLUDE) $<

clean:
	rm -rf *~ \#_* *.o
	rm main
