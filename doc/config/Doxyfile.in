# Project related

PROJECT_NAME           = "DASH"
PROJECT_NUMBER         = @DASH_VERSION_MAJOR@.@DASH_VERSION_MINOR@.@DASH_VERSION_PATCH@
STRIP_FROM_PATH        = @PROJECT_SOURCE_DIR@ \
                         @PROJECT_BINARY_DIR@
INPUT                  = "@PROJECT_SOURCE_DIR@/doc/config/mainpage.dox" \
                         "@PROJECT_SOURCE_DIR@/dart-if/v3.1/include" \
                         "@PROJECT_SOURCE_DIR@/dash/include"
#                        "@PROJECT_SOURCE_DIR@/dart-impl/mpi/include" \
#                        "@PROJECT_SOURCE_DIR@/dart-impl/shmem/dart-shmem/include" \
#                        "@PROJECT_SOURCE_DIR@/dart-impl/cuda/dart-cuda/include" \
OUTPUT_DIRECTORY       = "doc"
FILE_PATTERNS          = *.h \
                       = *.c \
                       = *.cpp \
                         *.cc
EXCLUDE_PATTERNS       = */test/* \
                         */gtest/* \
                         */examples/* \
                         */internal/*
EXCLUDE_SYMBOLS        = *::test::* \
                         *::testing::* \
                         *::examples::* \
                         *::internal::*
RECURSIVE              = YES
USE_MDFILE_AS_MAINPAGE = @doxy_main_page@
ALWAYS_DETAILED_SEC    = YES
INLINE_INHERITED_MEMB  = YES
FULL_PATH_NAMES        = YES
STRIP_FROM_PATH        = "@CMAKE_SOURCE_DIR@"
STRIP_FROM_INC_PATH    = 
SHORT_NAMES            = NO
JAVADOC_AUTOBRIEF      = YES
QT_AUTOBRIEF           = NO
MULTILINE_CPP_IS_BRIEF = NO
INHERIT_DOCS           = YES
SEPARATE_MEMBER_PAGES  = NO
TAB_SIZE               = 3

# Custom commands
ALIASES += concept{1}="@ingroup \1\n@par Implemented concepts:\n@ref \1"

# Build related

EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_PACKAGE        = NO
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
EXTRACT_LOCAL_METHODS  = NO
EXTRACT_ANON_NSPACES   = NO
HIDE_UNDOC_MEMBERS     = NO
